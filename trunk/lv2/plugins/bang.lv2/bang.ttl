@prefix lv2:     <http://lv2plug.in/ns/lv2core#> .
@prefix lv2ctx:  <http://lv2plug.in/ns/dev/contexts#> .
@prefix lv2ev:   <http://lv2plug.in/ns/ext/event#> .
@prefix lv2ui:   <http://lv2plug.in/ns/extensions/ui#> .
@prefix drobins: <http://drobilla.net/lv2_plugins/dev/> .
@prefix doap:    <http://usefulinc.com/ns/doap#> .

drobins:bang
	a lv2:Plugin ;
	lv2:binary <bang.so> ;
	doap:name "Bang" ;
	doap:license <http://usefulinc.com/doap/licenses/gpl> ;

	lv2ctx:requiredContext lv2ctx:MessageContext ;

	lv2:port [
		a lv2ev:EventPort, lv2:InputPort ;
		lv2ctx:context lv2ctx:MessageContext ;
		lv2:index 0 ;
		lv2:symbol "in" ;
		lv2:name "Input" ;
		lv2:portHint lv2:connectionOptional
	] , [
		a lv2ev:EventPort, lv2:OutputPort ;
		lv2ctx:context lv2ctx:MessageContext ;
		lv2:index 1 ;
		lv2:symbol "out" ;
		lv2:name "Output" ;
		lv2:portHint lv2:connectionOptional
	] .

drobins:bang-ui
  a lv2ui:GtkUI ;
  lv2ui:requiredFeature lv2ui:makeResident ;
  lv2ui:binary <bang_gtk.so> ;
  lv2ui:optionalFeature lv2ui:ext_presets .
