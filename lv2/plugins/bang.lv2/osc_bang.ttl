@prefix lv2:          <http://lv2plug.in/ns/lv2core#> .
@prefix lv2_contexts: <http://drobilla.net/ns/lv2ext/contexts#> .
@prefix lv2_osc:      <http://drobilla.net/ns/lv2ext/osc/0#> .
@prefix drobins:      <http://drobilla.net/lv2_plugins/dev/> .
@prefix doap:         <http://usefulinc.com/ns/doap#> .

drobins:osc_bang
	a lv2:Plugin ;
	doap:name "OSC Bang" ;
	doap:license <http://usefulinc.com/doap/licenses/gpl> ;

	lv2_contexts:requiredContext lv2_contexts:MessageContext ;

	lv2:port [
		a lv2_osc:OSCPort, lv2:InputPort ;
		lv2_contexts:context lv2_contexts:MessageContext ;
		lv2:index 0 ;
		lv2:symbol "in" ;
		lv2:name "Input" ;
		lv2:portHint lv2:connectionOptional
	] , [
		a lv2_osc:OSCPort, lv2:OutputPort ;
		lv2_contexts:context lv2_contexts:MessageContext ;
		lv2:index 1 ;
		lv2:symbol "out" ;
		lv2:name "Output" ;
		lv2:portHint lv2:connectionOptional
	] .

