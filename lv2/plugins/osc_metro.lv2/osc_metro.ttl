@prefix lv2:     <http://lv2plug.in/ns/lv2core#> .
@prefix drobins: <http://drobilla.net/lv2_plugins/dev/> .
@prefix units:   <http://lv2plug.in/ns/units#> .
@prefix oscext:  <http://drobilla.net/ns/lv2ext/osc/0#> .
@prefix doap:    <http://usefulinc.com/ns/doap#> .

drobins:osc_metronome
  a lv2:Plugin ;
  doap:name "OSC Metronome" ;
  doap:license <http://usefulinc.com/doap/licenses/gpl> ;

  lv2:port [
    a oscext:OSCPort, lv2:InputPort ;
    lv2:index 0 ;
    lv2:symbol "sync" ;
    lv2:name "Sync" ;
	lv2:portHint lv2:connectionOptional ;
  ]  ;
  
  lv2:port [
    a lv2:ControlPort, lv2:InputPort ;
    lv2:index 1 ;
    lv2:symbol "bpm" ;
    lv2:name "BPM" ;
	units:unit units:bpm ;
	lv2:default 120.0 ;
  ] ;

  lv2:port [
    a oscext:OSCPort, lv2:OutputPort ;
    lv2:index 2 ;
    lv2:symbol "bang" ;
    lv2:name "Bang" ;
	lv2:portHint lv2:connectionOptional ;
  ]  .
  
